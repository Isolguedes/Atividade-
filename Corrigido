<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Minha To Do List</title>
  <style>
    body { font-family: Arial, sans-serif; }
    li { margin: 6px 0; display: flex; align-items: center; gap: 10px; }
    .acoes button { margin-left: 5px; }
  </style>
</head>
<body>
  <h1>ðŸ’™ MINHA TO DO LIST ðŸ’™</h1>

  <input id="tarefaInput" type="text" placeholder="Digite uma tarefa">
  <button type="button" onclick="adicionarTarefa()">Adicionar</button>

  <ul id="listaTarefas"></ul>

  <script>
    const input = document.getElementById("tarefaInput");
    const lista = document.getElementById("listaTarefas");

    function adicionarTarefa() {
      if (input.value === "") {
        alert("Digite uma tarefa!");
        return;
      }

      const li = document.createElement("li");

      const checkbox = document.createElement("input");
      checkbox.type = "checkbox";

      const span = document.createElement("span");
      span.textContent = input.value;

      checkbox.onclick = () => {
        span.style.textDecoration = checkbox.checked ? "line-through" : "none";
      };

      const acoes = document.createElement("div");
      acoes.className = "acoes";

      const btnEditar = document.createElement("button");
      btnEditar.textContent = "âœŽ";
      btnEditar.onclick = () => {
        const novoTexto = prompt("Edite a tarefa:", span.textContent);
        if (novoTexto) span.textContent = novoTexto;
      };

      const btnRemover = document.createElement("button");
      btnRemover.textContent = "X";
      btnRemover.onclick = () => li.remove();

      acoes.appendChild(btnEditar);
      acoes.appendChild(btnRemover);

      li.appendChild(checkbox);
      li.appendChild(span);
      li.appendChild(acoes);

      lista.appendChild(li);

      input.value = "";
    }
  </script>
</body>
</html>
